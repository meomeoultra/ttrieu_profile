# =======================
#  DATABASE GIáº¢ Láº¬P
# =======================
USER = {
    "username": "player",
    "coin": 50000
}

ADMIN = {
    "username": "admin",
    "password": "admin",
}

# =======================
#  GAME TÃ€I Xá»ˆU
# =======================
def play_game():
    while True:
        banner()
        print(f"NgÆ°á»i chÆ¡i: {USER['username']} | Coin: {USER['coin']:,}")
        print("\n[1] Äáº·t TÃ€I")
        print("[2] Äáº·t Xá»ˆU")
        print("[0] ThoÃ¡t vá» menu")
        
        choice = input("\nChá»n: ")
        if choice == "0":
            return
        
        if choice not in ["1", "2"]:
            slow("Lá»±a chá»n khÃ´ng há»£p lá»‡!")
            time.sleep(1)
            continue
        
        bet = input("Nháº­p sá»‘ coin cÆ°á»£c: ")
        if not bet.isdigit():
            slow("Nháº­p coin há»£p lá»‡!")
            time.sleep(1)
            continue

        bet = int(bet)
        if bet <= 0 or bet > USER["coin"]:
            slow("CÆ°á»£c khÃ´ng há»£p lá»‡!")
            time.sleep(1)
            continue

        USER["coin"] -= bet

        slow("\nÄang láº¯c xÃºc xáº¯c...", 0.05)
        time.sleep(1)

        dice = [random.randint(1, 6) for _ in range(3)]
        total = sum(dice)

        slow(f"ğŸ² Káº¿t quáº£: {dice}  | Tá»•ng = {total}")

        result = "TÃ€I" if total >= 11 else "Xá»ˆU"
        slow(f"Káº¿t quáº£ chung cuá»™c: {result}")

        # NgÆ°á»i chÆ¡i chá»n gÃ¬
        pick = "TÃ€I" if choice == "1" else "Xá»ˆU"

        if pick == result:
            win = bet * 2
            USER["coin"] += win
            slow(f"âœ” Báº¡n tháº¯ng {win:,} coin!")
        else:
            slow("âœ˜ Báº¡n thua rá»“i bro...")

        input("\nBáº¥m Enter Ä‘á»ƒ tiáº¿p tá»¥c...")

# =======================
#  ADMIN PANEL
# =======================
def admin_panel():
    banner()
    print("---- ÄÄ‚NG NHáº¬P ADMIN ----")
    user = input("TÃªn Ä‘Äƒng nháº­p: ")
    pw = input("Máº­t kháº©u: ")

    if user != ADMIN["username"] or pw != ADMIN["password"]:
        slow("Sai thÃ´ng tin!")
        time.sleep(1)
        return

    while True:
        banner()
        print("=== ADMIN PANEL ===")
        print("[1] Xem thÃ´ng tin ngÆ°á»i chÆ¡i")
        print("[2] ThÃªm coin cho ngÆ°á»i chÆ¡i")
        print("[3] Reset coin ngÆ°á»i chÆ¡i")
        print("[0] ThoÃ¡t")

        ad = input("Chá»n: ")

        if ad == "0":
            return
        
        elif ad == "1":
            banner()
            print("THÃ”NG TIN NGÆ¯á»œI CHÆ I")
            print(f"TÃªn: {USER['username']}")
            print(f"Coin: {USER['coin']:,}")
            input("\nEnter Ä‘á»ƒ quay láº¡i...")

        elif ad == "2":
            add = input("ThÃªm coin: ")
            if add.isdigit():
                USER["coin"] += int(add)
                slow("ÄÃ£ thÃªm thÃ nh cÃ´ng!")
                time.sleep(1)

        elif ad == "3":
            USER["coin"] = 50000
            slow("ÄÃ£ reset coin vá» 50,000!")
            time.sleep(1)

        else:
            slow("Lá»±a chá»n khÃ´ng há»£p lá»‡!")
            time.sleep(1)

# =======================
#  MAIN MENU
# =======================
def main():
    while True:
        banner()
        print("[1] ChÆ¡i TÃ i Xá»‰u")
        print("[2] Admin")
        print("[0] ThoÃ¡t")

        c = input("\nChá»n: ")

        if c == "1":
            play_game()
        elif c == "2":
            admin_panel()
        elif c == "0":
            clear()
            print("Táº¡m biá»‡t bro ğŸ˜")
            exit()
        else:
            slow("Sai lá»±a chá»n rá»“i bro!")
            time.sleep(1)

# =======================
#  START
# =======================
main()
