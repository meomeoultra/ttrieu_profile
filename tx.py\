import random
import time
import os

# =======================
#  SYSTEM EFFECTS
# =======================
def clear():
    os.system("clear")

def slow(text, delay=0.02):
    for c in text:
        print(c, end="", flush=True)
        time.sleep(delay)
    print()

def banner():
